# source files
SRC = driver.cpp ivf.c psnr.c ssim2.cpp Tests.cpp  Tests-NotUsed.cpp Tools.cpp Arguments.cpp FourCC.cpp md5_utils.c utilities.cpp

# source object files
SRCOBJ = driver.o ivf.o psnr.o ssim2.o Tests.o Tests-NotUsed.o Tools.o Arguments.o FourCC.o md5_utils.o utilities.o

# compiler
CPP = g++ -m64
CCC = gcc -m64

# Libraries
LFLAGS= -L../lib -lvpx_IMac64 -DINLINE=

#Includes
INCLUDE = -I ../include -D API -DHAVE_STDINT_H -D CONFIG_MD5=1

VP8_Tester_API_64Bit.exe: $(SRCOBJ)
	$(CPP)  $(INCLUDE) -o "VP8_Tester_API_64Bit.exe" $(SRCOBJ) $(LFLAGS)

ivf.o: ivf.c
	$(CPP) -c ivf.c $(INCLUDE) $(LFLAGS)

psnr.o: psnr.c
	$(CPP) -c psnr.c $(INCLUDE) $(LFLAGS)

ssim2.o: ssim2.cpp
	$(CPP) -c ssim2.cpp $(INCLUDE) $(LFLAGS)

Tests-NotUsed.o: Tests-NotUsed.cpp
	$(CPP) -c Tests-NotUsed.cpp $(INCLUDE) $(LFLAGS)

Tests.o: Tests.cpp
	$(CPP) -c Tests.cpp $(INCLUDE) $(LFLAGS)

Tools.o: Tools.cpp
	$(CPP) -c Tools.cpp $(INCLUDE) $(LFLAGS)

utilities.o: utilities.cpp
	$(CPP) -c  utilities.cpp $(INCLUDE) $(LFLAGS)

Arguments.o: Arguments.cpp
	$(CPP) -c Arguments.cpp $(INCLUDE) $(LFLAGS)

FourCC.o: FourCC.cpp
	$(CPP) -c FourCC.cpp $(INCLUDE) $(LFLAGS)

driver.o: driver.cpp
	$(CPP) -c driver.cpp $(INCLUDE) $(LFLAGS)

md5_utils.o: md5_utils.c
	$(CCC) -c md5_utils.c $(INCLUDE)$(LFLAGS)

clean:
	rm -f $(SRCOBJ) VP8_Tester_API_64Bit.exe
