# source files
SRC = driver.cpp ivf.c psnr.c ssim2.cpp Tests.cpp Tools.cpp Arguments.cpp FourCC.cpp md5_utils.cpp utilities.cpp args.cpp ivfdec.cpp ivfenc.cpp y4minput.cpp

# source object files
SRCOBJ = driver.o ivf.o psnr.o ssim2.o Tests.o Tools.o Arguments.o FourCC.o md5_utils.o utilities.o args.o ivfdec.o ivfenc.o y4minput.o

# compiler
CCC = g++ -m32
GCC = gcc -m32

# Libraries
LFLAGS= -L ../lib -lvpx_Lin32 -lpthread -DINLINE=

#Includes
INCLUDE = -I ../include -D API -DHAVE_STDINT_H -D CONFIG_MD5=1
 
VP8_Tester_API_32Bit: $(SRCOBJ) 
	$(CCC)  $(INCLUDE) -o "VP8_Tester_API_32Bit.exe" $(SRCOBJ) $(LFLAGS)

ivf.o: ivf.c
	$(CCC) -c ivf.c $(INCLUDE)  $(LFLAGS)

psnr.o: psnr.c
	$(CCC) -c psnr.c $(INCLUDE)  $(LFLAGS)

ssim2.o: ssim2.cpp
	$(CCC) -c ssim2.cpp $(INCLUDE)  $(LFLAGS)

Tests.o: Tests.cpp
	$(CCC) -c Tests.cpp $(INCLUDE)  $(LFLAGS)

Tools.o: Tools.cpp
	$(CCC) -c Tools.cpp $(INCLUDE)  $(LFLAGS)

utilities.o: utilities.cpp
	$(CCC) -c  utilities.cpp $(INCLUDE)  $(LFLAGS)

Arguments.o: Arguments.cpp
	$(CCC) -c Arguments.cpp $(INCLUDE)  $(LFLAGS)

FourCC.o: FourCC.cpp
	$(CCC) -c FourCC.cpp $(INCLUDE)  $(LFLAGS)

driver.o: driver.cpp
	$(CCC) -c driver.cpp $(INCLUDE)  $(LFLAGS)

md5_utils.o: md5_utils.cpp
	$(CCC) -c md5_utils.cpp $(INCLUDE) $(LFLAGS)

args.o: args.cpp
	$(CCC) -c args.cpp $(INCLUDE) $(LFLAGS)

y4minput.o: y4minput.cpp
	$(CCC) -c y4minput.cpp $(INCLUDE) $(LFLAGS)

ivfdec.o: ivfdec.cpp
	$(CCC) -c ivfdec.cpp $(INCLUDE) $(LFLAGS)

ivfenc.o: ivfenc.cpp
	$(CCC) -c ivfenc.cpp $(INCLUDE) $(LFLAGS)

clean: 
	rm -f $(SRCOBJ) VP8_Tester_API_32Bit.exe
