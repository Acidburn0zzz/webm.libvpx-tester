# directory to build to
OBJDIR = build-ppc64

include source.mk

# compiler
GPP = g++ -g -m64
GCC = gcc -g -m64

# Libraries
LFLAGS= -L../lib -lvpx_PPC64 -DINLINE=

#Includes
INCLUDE = -I ../include -I ../include/release-64 -D API -D _PPC -DHAVE_STDINT_H -D CONFIG_MD5=1 -D COMP_GCC

$(OBJDIR)/VP8_Tester_API_64Bit: $(SRCOBJ)
	$(GPP)  $(INCLUDE) -o "$(OBJDIR)/VP8_Tester_API_64Bit.exe" $(SRCOBJ) $(LFLAGS)

include build.mk

clean:
	rm -f $(SRCOBJ) $(OBJDIR)/VP8_Tester_API_64Bit.exe
