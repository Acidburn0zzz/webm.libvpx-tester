# source files
SRC = supportingdebug.cpp psnr.c ssim2.cpp Utilities.cpp ivf.c 

# source object files
SRCOBJ = supportingdebug.o ivf.o psnr.o ssim2.o Utilities.o 

# compiler
CPP = arm-none-linux-gnueabi-g++
CCC = arm-none-linux-gnueabi-gcc

# Libraries
LFLAGS= -L../lib -lpthread -lvpx_MemArm  -D CONFIG_MEM_TRACKER=1 -DINLINE=

#Includes
INCLUDE = -I ../include -I "../Header Files" -D API -D ARM -DHAVE_STDINT_H
 
VP8vNewest_PlugIn_DLib_DMode.exe: $(SRCOBJ) 
	$(CPP) $(INCLUDE) -o "VP8vNewest_PlugIn_DLib_DMode.exe" $(SRCOBJ) $(LFLAGS)

ivf.o: ivf.c
	$(CCC) -c ivf.c $(INCLUDE)  $(LFLAGS)

psnr.o: psnr.c
	$(CCC) -c psnr.c $(INCLUDE)  $(LFLAGS)

ssim2.o: ssim2.cpp
	$(CPP) -c ssim2.cpp $(INCLUDE)  $(LFLAGS)

Utilities.o: Utilities.cpp
	$(CPP) -c Utilities.cpp $(INCLUDE)  $(LFLAGS)

supportingdebug.o: supportingdebug.cpp
	$(CPP) -c supportingdebug.cpp $(INCLUDE)  $(LFLAGS)

clean: 
	rm -f $(SRCOBJ) VP8vNewest_PlugIn_DLib_DMode.exe
