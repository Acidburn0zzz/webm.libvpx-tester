# source files
SRC =  psnr.c ssim2.cpp Utilities.cpp ivf.c supportingdebug.cpp

# source object files
SRCOBJ = psnr.o ssim2.o Utilities.o ivf.o supportingdebug.o 

# compiler
CPP = g++ -m32
ICC = gcc -m32
DEBUG = -g

# Libraries
LFLAGS= -L../lib -lvpx_MemIMac32 -D CONFIG_MEM_TRACKER=1 -DINLINE=

#Includes
INCLUDE = -I ../include -I "../HeaderFiles" -D API -D API -DHAVE_STDINT_H
 
VP8vNewest_PlugIn_DLib_DMode_32Bit.exe: $(SRCOBJ) 
	$(CPP) $(INCLUDE) -o "VP8vNewest_PlugIn_DLib_DMode_32Bit.exe" $(SRCOBJ) $(LFLAGS) $(DEBUG)

ivf.o: ivf.c
	$(ICC) -c ivf.c $(INCLUDE) $(LFLAGS) $(DEBUG)

psnr.o: psnr.c
	$(ICC) -c psnr.c $(INCLUDE) $(LFLAGS) $(DEBUG)

ssim2.o: ssim2.cpp
	$(CPP) -c ssim2.cpp $(INCLUDE) $(LFLAGS) $(DEBUG)

Utilities.o: Utilities.cpp
	$(CPP) -c Utilities.cpp $(INCLUDE) $(LFLAGS) $(DEBUG)

supportingdebug.o: supportingdebug.cpp
	$(CPP) -c supportingdebug.cpp $(INCLUDE) $(LFLAGS) $(DEBUG)

clean: 
	rm -f $(SRCOBJ) VP8vNewest_PlugIn_DLib_DMode_32Bit.exe
