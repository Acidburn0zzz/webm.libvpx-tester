# source files
SRC = supportingdebug.cpp psnr.c ssim2.cpp Utilities.cpp ivf.c md5_utils.cpp

# source object files
SRCOBJ = supportingdebug.o ivf.o psnr.o ssim2.o Utilities.o md5_utils.o

# compiler
GPP = g++ -m64
GCC = gcc -m64

# Libraries
LFLAGS= -L../lib -lpthread -lvpx_MemLin64  -D CONFIG_MEM_TRACKER=1 -DINLINE=

#Includes
INCLUDE = -I ../include -I ../include/debug-64 -D API -DHAVE_STDINT_H

VP8vNewest_PlugIn_DLib_DMode_64Bit.exe: $(SRCOBJ)
	$(GPP) $(INCLUDE) -o "VP8vNewest_PlugIn_DLib_DMode_64Bit.exe" $(SRCOBJ) $(LFLAGS)

ivf.o: ivf.c
	$(GCC) -c ivf.c $(INCLUDE)  $(LFLAGS)

psnr.o: psnr.c
	$(GCC) -c psnr.c $(INCLUDE)  $(LFLAGS)

ssim2.o: ssim2.cpp
	$(GPP) -c ssim2.cpp $(INCLUDE)  $(LFLAGS)

Utilities.o: Utilities.cpp
	$(GPP) -c Utilities.cpp $(INCLUDE)  $(LFLAGS)

supportingdebug.o: supportingdebug.cpp
	$(GPP) -c supportingdebug.cpp $(INCLUDE)  $(LFLAGS)

md5_utils.o: md5_utils.cpp
	$(GPP) -c md5_utils.cpp $(INCLUDE) $(LFLAGS)

clean:
	rm -f $(SRCOBJ) VP8vNewest_PlugIn_DLib_DMode_64Bit.exe
