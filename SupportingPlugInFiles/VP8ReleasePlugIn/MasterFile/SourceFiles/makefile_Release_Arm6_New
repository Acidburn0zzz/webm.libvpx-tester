# source files
SRC = supportingrelease.cpp psnr.c ssim2.cpp Utilities.cpp ivf.c md5_utils.cpp

# source object files
SRCOBJ = supportingrelease.o ivf.o psnr.o ssim2.o Utilities.o md5_utils.o

# compiler
GPP = arm-none-linux-gnueabi-g++
GCC = arm-none-linux-gnueabi-gcc

# Libraries
LFLAGS= -L../newlib -lpthread -lvpx_NewArm6 -DINLINE=

#Includes
INCLUDE = -I ../include -I ../include/release-new-arm6 -D API -D ARM -D HAVE_STDINT_H

VP8vNewest_PlugIn_RLib_RMode_Arm6.exe: $(SRCOBJ)
	$(GPP) $(INCLUDE) -o "VP8vNewest_PlugIn_RLib_RMode_Arm6.exe" $(SRCOBJ) $(LFLAGS)

ivf.o: ivf.c
	$(GCC) -c ivf.c $(INCLUDE)  $(LFLAGS)

psnr.o: psnr.c
	$(GCC) -c psnr.c $(INCLUDE)  $(LFLAGS)

ssim2.o: ssim2.cpp
	$(GPP) -c ssim2.cpp $(INCLUDE)  $(LFLAGS)

Utilities.o: Utilities.cpp
	$(GPP) -c Utilities.cpp $(INCLUDE)  $(LFLAGS)

supportingrelease.o: supportingrelease.cpp
	$(GPP) -c supportingrelease.cpp $(INCLUDE)  $(LFLAGS)

md5_utils.o: md5_utils.cpp
	$(GPP) -c md5_utils.cpp $(INCLUDE) $(LFLAGS)

clean:
	rm -f $(SRCOBJ) VP8vNewest_PlugIn_RLib_RMode_Arm6.exe
