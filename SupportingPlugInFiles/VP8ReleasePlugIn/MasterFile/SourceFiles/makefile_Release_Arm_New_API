# source files
SRC = supportingrelease.cpp psnr.c ssim2.cpp Utilities.cpp ivf.c

# source object files
SRCOBJ = supportingrelease.o ivf.o psnr.o ssim2.o Utilities.o
 
# compiler
CPP = arm-none-linux-gnueabi-g++
CCC = arm-none-linux-gnueabi-gcc

# Libraries
LFLAGS= -L../newlib -lpthread -lvpx_NewArm -DINLINE=

#Includes
INCLUDE = -I ../include -D API -D ARM -D HAVE_STDINT_H 
 
VP8vNewest_PlugIn_RLib_RMode.exe: $(SRCOBJ) 
	$(CPP) $(INCLUDE) -o "VP8vNewest_PlugIn_RLib_RMode.exe" $(SRCOBJ) $(LFLAGS)

ivf.o: ivf.c
	$(CCC) -c ivf.c $(INCLUDE)  $(LFLAGS)

psnr.o: psnr.c
	$(CCC) -c psnr.c $(INCLUDE)  $(LFLAGS)

ssim2.o: ssim2.cpp
	$(CPP) -c ssim2.cpp $(INCLUDE)  $(LFLAGS)

Utilities.o: Utilities.cpp
	$(CPP) -c Utilities.cpp $(INCLUDE)  $(LFLAGS)

supportingrelease.o: supportingrelease.cpp
	$(CPP) -c supportingrelease.cpp $(INCLUDE)  $(LFLAGS)

clean: 
	rm -f $(SRCOBJ) VP8vNewest_PlugIn_RLib_RMode.exe
