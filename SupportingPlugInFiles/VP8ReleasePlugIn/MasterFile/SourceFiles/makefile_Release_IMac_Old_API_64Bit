# source files
SRC =  psnr.c ssim2.cpp Utilities.cpp ivf.c supportingrelease.cpp

# source object files
SRCOBJ = psnr.o ssim2.o Utilities.o ivf.o supportingrelease.o 

# compiler
CPP = g++ -m64
ICC = gcc -m64

# Libraries
LFLAGS= -L../oldlib -lvpx_OldIMac64 -DINLINE=

#Includes
INCLUDE = -I ../include -D API -D API -D HAVE_STDINT_H 
 
VP8vOldest_PlugIn_RLib_RMode_64Bit.exe: $(SRCOBJ) 
	$(CPP) $(INCLUDE) -o "VP8vOldest_PlugIn_RLib_RMode_64Bit.exe" $(SRCOBJ) $(LFLAGS)

ivf.o: ivf.c
	$(ICC) -c ivf.c $(INCLUDE) $(LFLAGS)

psnr.o: psnr.c
	$(ICC) -c psnr.c $(INCLUDE) $(LFLAGS)

ssim2.o: ssim2.cpp
	$(CPP) -c ssim2.cpp $(INCLUDE) $(LFLAGS)

Utilities.o: Utilities.cpp
	$(CPP) -c Utilities.cpp $(INCLUDE) $(LFLAGS)

supportingrelease.o: supportingrelease.cpp
	$(CPP) -c supportingrelease.cpp $(INCLUDE)$(LFLAGS)

clean: 
	rm -f $(SRCOBJ) VP8vOldest_PlugIn_RLib_RMode_64Bit.exe
