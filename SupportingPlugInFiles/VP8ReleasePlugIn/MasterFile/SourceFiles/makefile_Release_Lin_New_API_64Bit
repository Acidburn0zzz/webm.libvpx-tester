# source files
SRC = supportingrelease.cpp psnr.c ssim2.cpp utilities.cpp ivf.c md5_utils.cpp

# source object files
SRCOBJ = supportingrelease.o ivf.o psnr.o ssim2.o utilities.o md5_utils.o

# compiler
GPP = g++ -g -m64
GCC = gcc -g -m64

# Libraries
LFLAGS= -L../newlib -lpthread -lvpx_NewLin64 -DINLINE=

#Includes
INCLUDE = -I ../include -I ../include/release-new-64 -D API -D HAVE_STDINT_H

VP8vNewest_PlugIn_RLib_RMode_64Bit.exe: $(SRCOBJ)
	$(GPP) $(INCLUDE) -o "VP8vNewest_PlugIn_RLib_RMode_64Bit.exe" $(SRCOBJ) $(LFLAGS)

ivf.o: ivf.c
	$(GCC) -c ivf.c $(INCLUDE)  $(LFLAGS)

psnr.o: psnr.c
	$(GCC) -c psnr.c $(INCLUDE)  $(LFLAGS)

ssim2.o: ssim2.cpp
	$(GPP) -c ssim2.cpp $(INCLUDE)  $(LFLAGS)

utilities.o: utilities.cpp
	$(GPP) -c utilities.cpp $(INCLUDE)  $(LFLAGS)

supportingrelease.o: supportingrelease.cpp
	$(GPP) -c supportingrelease.cpp $(INCLUDE)  $(LFLAGS)

md5_utils.o: md5_utils.cpp
	$(GPP) -c md5_utils.cpp $(INCLUDE) $(LFLAGS)

clean:
	rm -f $(SRCOBJ) VP8vNewest_PlugIn_RLib_RMode_64Bit.exe
